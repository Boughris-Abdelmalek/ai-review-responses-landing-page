---
import '../styles/global.css'

import Hero from '@/components/Hero.astro'
import Header from '@/components/Header.astro'
import Features from '@/components/Features.astro'
import HowItWorks from '@/components/HowItWorks.astro'
import Pricing from '@/components/Pricing.astro'
import Footer from '@/components/Footer.astro'

---

<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width"/>
    <link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL}favicon.svg`}/>
    <link rel="icon" href={`${import.meta.env.BASE_URL}favicon.ico`}/>
    <meta name="generator" content={Astro.generator}/>
    <title>Astro + TailwindCSS</title>
</head>
<body class="bg-background-dark obsidian-bg text-slate-100 font-body min-h-screen flex flex-col overflow-x-hidden selection:bg-primary selection:text-white">
<Header/>
<main class="flex-1 w-full flex flex-col items-center">
    <Hero/>
    <Features />
    <HowItWorks />
    <Pricing />
    <Footer />
</main>
</body>
</html>
